@model PagedList.IPagedList<TFSServicesDBLib.RunHistory>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            Date
        </th>
        <th>
            Result
        </th>
        <th>
            Rule Id
        </th>
        <th>
            Rule Title
        </th>
        <th>
            Rule Revision
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Result)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rules.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rules.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RuleRevision)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id })
        </td>
    </tr>
    }

</table>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))

